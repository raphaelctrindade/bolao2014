<tr>
  <td class="text-center"><%= link_to "##{question.number}", question_path(question) %></td>

  <td class="text-left" colspan="2"><%= question.body %></td>

  <td class="text-left" colspan="3">
    <% if question.answered? %>
      <%= question.answer_text %>
    <% else %>
      <span class="subheader"><%= t '.not_yet_answered' %></span>
    <% end %>
  </td>
</tr>
