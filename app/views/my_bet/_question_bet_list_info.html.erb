<tr>
  <td class="text-center">&nbsp;</td>

  <td class="text-left">
    <% if question.bettable? %>
      <span class="has-tip" title="<%= t '.you_may_change_your_bet_until', datetime: l(question.bettable_until, format: :detailed ) %>">
        <%= l question.bettable_until, format: :short %>
      </span>
    <% else %>
      &nbsp;
    <% end %>
  </td>

  <td class="text-right"><em><%= t('.your_answer') %></em></td>

  <td class="text-left">
    <% if question_bet %>
      <%= question_bet.answer_text %>
    <% else %>
      <span class="subheader"><%= t '.not_yet_answered' %></span>
    <% end %>
  </td>

  <td class="text-center">
    <% if question.bettable? %>
      <% if question_bet %>
        <strong><%= link_to t('.update'), my_question_bet_path(question) %></strong>
      <% else %>
        <strong><%= link_to t('.create'), my_question_bet_path(question) %></strong>
      <% end %>
    <% else %>
      &nbsp;
    <% end %>
  </td>

  <td class="text-center">
    <% if question_bet %>
      <%= question_bet.points_with_explanation %> <%= t('.points') %>
    <% else %>
      -
    <% end %>
  </td>
</tr>
