<% content_for(:title) { t('.title') } %>

<div class="row">
  <div class="small-12 column">
    <h2><%= t('.title') %></h2>
  </div>
</div>

<div class="row">
  <div class="small-12 column">
    <table>
      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= link_to "##{question.number}", question_path(question) %></td>
            <td class="text-left hide-for-small-only"><%= question.body %></td>
            <td class="text-left"><%= question.answer_text_or_? %></td>
            <td class="hide-for-small-only"><%= link_to t('.view'), admin_question_path(question) %> | <%= link_to t('.edit'), edit_admin_question_path(question) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
